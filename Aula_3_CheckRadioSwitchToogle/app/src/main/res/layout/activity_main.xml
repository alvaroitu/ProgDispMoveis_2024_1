<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="nome"
            android:ems="10"
            android:id="@+id/editTextNome"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="sobre nome"
            android:ems="10"
            android:id="@+id/editTextSobrenome" android:minHeight="48dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <CheckBox
                android:text="Vermelho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox1"/>
        <CheckBox
                android:text="Verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox2"/>
        <CheckBox
                android:text="Azul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox3"/>
    </LinearLayout>
    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/radioGroupSexo">
        <RadioButton
                android:text="Masculino"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:id="@+id/radioButtonMasculino"/>
        <RadioButton
                android:text="Feminino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButtonFeminino"/>
    </RadioGroup>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <Button
                android:text="Enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonEnviar"/>
        <Button
                android:text="Limpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonLimpar"/>
    </LinearLayout>
    <TextView
            android:text="Resultado"
            android:layout_width="match_parent"
            android:layout_height="63dp" android:id="@+id/textViewResultado"
            android:gravity="center"/>
    <Switch
            android:text="Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/switchButton"/>
    <TextView
            android:text="Switch resultado"
            android:layout_width="match_parent"
            android:layout_height="57dp" android:id="@+id/switchResultado" android:gravity="center"/>
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/toggleButton"/>
    <TextView
            android:text="Toogle resultado"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/toggleResultado" android:gravity="center"/>
</LinearLayout>