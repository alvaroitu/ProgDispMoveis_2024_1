<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">

    <TextView
            android:text="Valor Recebido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewValorRecebido"
            tools:layout_editor_absoluteX="151dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:gravity="center"/>
    <Button
            android:text="Google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonGoogle"
            tools:layout_editor_absoluteX="160dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewValorRecebido"/>
    <Button
            android:text="E-mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonEmail"
            tools:layout_editor_absoluteX="162dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonGoogle"/>
    <Button
            android:text="Voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonVoltar"
            tools:layout_editor_absoluteX="152dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonEmail"/>
</androidx.constraintlayout.widget.ConstraintLayout>