<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:padding="5dp"
        android:id="@+id/linearLayout">
    <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp" android:padding="5dp" android:id="@+id/listCategories"/>
    <Button
            android:text="Buscar dados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoRecuperar" android:layout_margin="10dp"
            android:layout_marginTop="5dp"/>
    <TextView
            android:text="Resultado"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="199dp" android:id="@+id/textoResultado" android:gravity="center"/>
</LinearLayout>